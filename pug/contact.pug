                            a(href="../images/gallery-lg7.jpg" data-fancybox="gallery") #[img(src="../images/gallery7.jpg")]
                            a(href="../images/gallery-lg8.jpg" data-fancybox="gallery") #[img(src="../images/gallery8.jpg")]
                            a(href="../images/gallery-lg9.jpg" data-fancybox="gallery") #[img(src="../images/gallery9.jpg")]
                .copy
                    p All rights are reserved &copy; 2019 EduGate 
        
