doctype
html
    head
        meta(charset="UTF-8")
        meta(meta name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="keywords" content="HTML,CSS,XML,JavaScript")
        meta(name="author" content="MR. Loll")
        block the-title
            title EduGate - Contact Us
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Cairo&display=swap")
        link(rel="stylesheet" href="../css/all.min.css" type="text/css")
        link(rel="stylesheet" href="../css/bootstrap.min.css" type="text/css")
        link(rel="stylesheet" href="../css/animate.css" type="text/css")
        link(rel="stylesheet" href="../css/slick.css" type="text/css")
        link(rel="stylesheet" href="../css/jquery.fancybox.min.css" type="text/css")
        block stylesheet
            link(rel="stylesheet" href="../css/app.css" type="text/css")
        block style
            style.
                .felx {width: 100%}
                .contact-form form .form-group:first-of-type{margin-left: 50px}
                .contact-form form .form-group {width: 50%}
                input[type="submit"] {margin}
                @media (max-width: 576px) {
                    form {
                        margin-top:0;
                    }
                }
    body
        block header
            //**************************
            //==========================
            //       START HEADER
            //==========================
            //**************************
            header
                .top-nav.d-none.d-md-block
                    .container
                        .row
                            .contact.col-12.col-lg-6.text-center.text-lg-left
                                .mail                            
                                    a(href="mailto:walidelloll2018@gmail.com") #[i(class="far fa-envelope")] walidelloll2018@gmail.com
                                .phone
                                    i(class="fas fa-phone")
                                    span +201005037275
                            .social.col-12.col-lg-6.text-center.text-lg-right
                                a(href="http://facebook.com" class="facebook" target="_blank") #[i(class="fab fa-facebook-f")]
                                a(href="http://google.com" class="facebook" target="_blank") #[i(class="fab fa-google-plus-g")]
                                a(href="http://twitter.com" class="facebook" target="_blank") #[i(class="fab fa-twitter")]
                                a(href="http://dribble.com" class="facebook" target="_blank") #[i(class="fas fa-basketball-ball")]
                                a(href="http://pinterest.com" class="facebook" target="_blank") #[i(class="fab fa-pinterest")]
                                a(href="http://instagram.com" class="facebook" target="_blank") #[i(class="fab fa-instagram")]
                    
                //**************************
                //==========================
                //      START NAV BAR
                //==========================
                //**************************
                nav
                    .container
                        .row
                            .bars.col
                                <i class="fas fa-bars"></i>

                            .nav-links.col-12.col-lg-9.text-right
                                .wrapper
                                    ul 

                                        //=============
                                        // one link 
                                        //==============
                                        li(class="link") 
                                            a(href="../index.html") الصفحة الرئيسيه
                                        
                                        block change-active
                                            //=============
                                            // one link 
                                            //==============
                                            li(data-class=".courses").link 
                                                a(href="courses.html") <i class="fas fa-chevron-down"></i>  الكورسات
                                                .box.courses
                                                    ul
                                                        //=============
                                                        // sublinks
                                                        //==============
                                                        li #[a(href="#") الكورس الاول]
                                                        li #[a(href="#") الكورس الثاني]
                                                        li #[a(href="#") الكورس الثالث]

                                        //=============
                                        // one link 
                                        //==============
                                        li(data-class=".news").link
                                            a(href="#") <i class="fas fa-chevron-down"></i>  اخر الاخبار
                                            .box.news
                                                ul
                                                    //=============
                                                    // sublinks
                                                    //==============
                                                    li #[a(href="#") الخبر الاول]
                                                    li #[a(href="#") الخبر الثاني]
                                                    li #[a(href="#") الخبر الثالث]

                                        //=============
                                        // one link 
                                        //==============
                                        li(data-class=".elements").link
                                            a(href="#") <i class="fas fa-chevron-down"></i>  العناصر 
                                            .box.elements
                                                ul
                                                    //=============
                                                    // sublinks
                                                    //==============
                                                    li #[a(href="#") العنصر الاول]
                                                    li #[a(href="#") العنصر الثاني]
                                                    li #[a(href="#") العنصر الثالث]
                                        
                                        //=============
                                        // one link 
                                        //==============
                                        li.link
                                            a(href="content.html") المحتوي
                                        
                                        block old-active
                                            //=============
                                            // one link 
                                            //==============
                                            li.link.active
                                                a(href="contact.html") اتصل بنا
                                        li.link.search
                                            form(dir="rtl")
                                                input(type="search" placeholder="ابحث")
                            .brand.col-3
                                .img
                                    img(class="img-fluid" src="../images/logo-1.png")
        
        //**************************
        //==========================
        //  START CONTACT FORM
        //==========================
        //**************************
        block body
            section.contact-form
                .overlay
                .container
                    .row
                        form(action="#" dir="rtl").col.text-center
                            .text.text-center
                                h2 اتصل بنا
                            div.flex
                                .form-group
                                    input(type="text" name='username' placeholder="الاسم").input
                                    p.alert.alert-danger  هذا الحقل ضروري
                                .form-group                            
                                    input(type="text" name='surname' placeholder="اللقب").input
                                    p.alert.alert-danger هذا الحقل ضروري
                            div.flex
                                .form-group
                                    input(type="email" name='email' placeholder="البريد الالكتروني").email
                                    p.alert.alert-danger هذا الحقل ضروري
                                .form-group                            
                                    input(type="text" name='subject' placeholder="الموضوع").input
                                    p.alert.alert-danger هذا الحقل ضروري
                            textarea(name="message", cols="20" placeholder="الرسالة").input
                            p.alert.alert-danger هذا الحقل ضروري
                            input(type="submit" value="ارسال").btn.btn-block
                            .loader.text-center
                                img(src="../images/ajax-loader.gif", alt="")
                            p.alert.alert-danger يوجد خطا في حقل او اكثر , من فضلك اعد المحاولة.
                            p.alert.alert-primary لقد تم ارسال طلبك بنجاح , شكرا لك !

            //**************************
            //==========================
            //  START FOOTER
            //==========================
            //**************************
        footer.text-right
            .container
                .row
                    //=========
                    //start brand and social
                    //=========
                    div(class="order-sm-0 order-md-2 order-lg-0 col-md-6 col-lg-3")
