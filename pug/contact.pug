                        .description
                            .location
                                p المنصوره , شارع احمد ماهر #[i(class="fas fa-home") ]
                                p +201005037275 #[i(class="fas fa-phone")]
                                p #[a(href="mailto:edu@gate.com") edu@gate.com] #[i(class="fas fa-envelope")]
                                
                            .social
                                div
                                    a(href="#" target="_blank") #[i(class="fab fa-facebook-f")]
                                    a(href="#" target="_blank") #[i(class="fab fa-google-plus-g")]
                                    a(href="", target="_blank") #[i(class="fab fa-twitter")]
                    //=========
                    //start useful links
                    //=========
                    div(class="order-sm-0 order-md-1 order-lg-0  col-md-6  col-lg-2 links")
                        .heading
                            h5 روابط مهمة
                        ul
                            li #[a(href="#") حول]
                            li #[a(href="#") F.A.Q]
                            li #[a(href="#") المعرض]
                            li #[a(href="#") المنتدي]
                            li #[a(href="#") المحادثه]



                    //=========
                    //start footer blogs
                    //=========
                    div(class="order-sm-0 order-md-2 order-lg-0 col-md-6 col-lg-3")
                        .heading
                            h5 الدورات
                        .blogs
                            //one blog
                            .blog
                                .img 
                                    img(src="../images/footer-course1.jpg")
                                .desc
                                    p #[a(href="#") تعلم الوردبريس] 
                            //one blog
                            .blog
                                .img 
                                    img(src="../images/footer-course2.jpg")
                                .desc
                                    p #[a(href="#") #[bdi sass] تعلم لغة]
                            //one blog
                            .blog
                                .img 
                                    img(src="../images/footer-course3.jpg")
